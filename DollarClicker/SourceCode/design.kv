<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		GridLayout:
			cols: 3
			rows: 1

			# Row
			Button:
			    id: weak_creator
				size_hint: (.2, .2)
				font_size: 32
				text: "Weak creator\n 0$"
				background_color: "red"
				on_press: root.weak_creator_clicked()

			Button:
			    id: middle_creator
				size_hint: (.2, .2)
				font_size: 32
				text: "Middle creator \n 4$"
				background_color: "red"
				on_press: root.middle_creator_clicked()

			Button:
				id: hard_creator
				size_hint: (.2, .2)
				font_size: 32
				text: "Hard creator \n 50$"
				background_color: "red"
				on_press: root.hard_creator_clicked()

		Button:
		    id: clicker
			size_hint: (1, 1)
			font_size: 32
			text: "Create one dollar"
			on_press: root.click()

		Label:
		    id: scores
		    size_hint: (1, 0.5)
		    text: "0$"

